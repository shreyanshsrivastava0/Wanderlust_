<% layout("/layouts/boilerplate") %>


    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h1>Add new Listings</h1>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
                    <div class="valid-feedback">This look good!</div>
                      <div class="invalid-feedback">Please enter title</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                     <div class="invalid-feedback">Please enter description</div>
                </div>

                
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input name="listing[image]" class="form-control" type="file">
                </div>

                <div class="row">
                     <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="1200" class="form-control"  required>
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>

                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" class="form-control" placeholder="India"    type="text" required>
                      <div class="invalid-feedback">Please enter the country name</div>
                </div>
                </div>
               

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" class="form-control" type="text" placeholder="Gorakhpur" required>
                    <div class="invalid-feedback">Please enter location</div>
                </div>
                <br><br>

                <button class="btn btn-dark add-btn">Add</button>
            </form>
        </div>
    </div>